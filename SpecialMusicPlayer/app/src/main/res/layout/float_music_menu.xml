<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:id="@+id/id_float_music_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/id_float_action"
        android:layout_width="@dimen/menu_action_width"
        android:layout_height="@dimen/menu_action_height"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:contentDescription="@null"
        android:background="@drawable/menu_src"
        android:text="@string/menu_action"
        android:lines="2"
        android:textStyle="bold"
        android:textSize="@dimen/menu_action_tv_size"
        android:textColor="@color/menu_action_color"
        android:gravity="center"
        />


</LinearLayout>