<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/action_bar_padding"
    >

    <ImageView
        android:id="@+id/id_center"
        android:layout_width="@dimen/action_bar_image_width_center"
        android:layout_height="@dimen/action_bar_image_height_center"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/action_bar_music"
        />

    <ImageView
        android:id="@+id/id_left"
        android:layout_width="@dimen/action_bar_image_width_lr"
        android:layout_height="@dimen/action_bar_image_height_lr"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/action_bar_image_margin_tb"
        android:layout_marginRight="@dimen/action_bar_image_margin_lr"
        android:clickable="true"
        android:layout_toLeftOf="@id/id_center"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/action_bar_found"
        />


    <ImageView
        android:id="@+id/id_right"
        android:layout_width="@dimen/action_bar_image_width_lr"
        android:layout_height="@dimen/action_bar_image_height_lr"
        android:layout_toRightOf="@id/id_center"
        android:layout_marginBottom="@dimen/action_bar_image_margin_tb"
        android:layout_marginLeft="@dimen/action_bar_image_margin_lr"
        android:clickable="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/action_bar_recommend"
        />

</RelativeLayout>